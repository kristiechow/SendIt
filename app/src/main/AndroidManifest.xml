<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kristie.sendit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".AlarmServiceEmail">

        </service>
        <service android:name=".AlarmService">

        </service>
        <provider android:authorities="com.facebook.app.FacebookContentProvider490458257992413"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true"/>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity
            android:name="com.example.kristie.sendit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NotificationActivity" />

        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="android.media.action.DISPLAY_NOTIFICATION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <receiver android:name=".AlarmReceiverNow">
            <intent-filter>
                <action android:name="android.media.action.DISPLAY_NOTIFICATION2" />
                <category android:name="android.intent.category.DEFAULT2" />
            </intent-filter>
        </receiver>


        <activity android:name="com.example.kristie.sendit.LoginActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.example.kristie.sendit.SignupActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.example.kristie.sendit.SMSActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.example.kristie.sendit.SettingsActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.example.kristie.sendit.ScheduledActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.example.kristie.sendit.MailSenderActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.example.kristie.sendit.SuccessEmailActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.example.kristie.sendit.SucessSMSActivity" android:theme="@style/AppTheme.Dark"/>
    </application>

</manifest>